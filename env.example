KLAVIYO_LIST_ID_NEWSLETTER=your_klaviyo_newsletter_list_id
KLAVIYO_LIST_ID_SMS=your_klaviyo_sms_list_id

# Email (Nodemailer/SendGrid)
# SMTP Server Configuration (shared for both email addresses)
EMAIL_SERVICE=gmail
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587

# No-Reply Email Configuration (for verification, password reset)
EMAIL_NOREPLY=noreply@royalcompetitions.co.uk
EMAIL_NOREPLY_NAME=Royal Competitions
EMAIL_NOREPLY_USER=your_noreply_smtp_user@gmail.com
EMAIL_NOREPLY_PASSWORD=your_noreply_smtp_password

# Info Email Configuration (for order updates, payment confirmations, winner notifications)
EMAIL_INFO=info@royalcompetitions.co.uk
EMAIL_INFO_NAME=Royal Competitions
EMAIL_INFO_USER=your_info_smtp_user@gmail.com
EMAIL_INFO_PASSWORD=your_info_smtp_password

# Or use SendGrid
SENDGRID_API_KEY=your_sendgrid_api_key

# SMS (Optional - Twilio)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=your_twilio_phone_number

# Frontend URL
FRONTEND_URL=http://localhost:3000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp,image/gif,video/mp4

# Admin
ADMIN_EMAIL=admin@royalcompetitions.co.uk
ADMIN_PASSWORD=SecurePassword123!

# Admin Seeder Passwords (for seed:admins script)
# These passwords are used when seeding admin users via npm run seed:admins
SEED_ADMIN_LUKASZ_PASSWORD=your_secure_password_here
SEED_ADMIN_MARCO_PASSWORD=your_secure_password_here
SEED_ADMIN_BRIAN_PASSWORD=your_secure_password_here

# Logging
LOG_LEVEL=info

